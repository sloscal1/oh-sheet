{
  "manifest_version": 3,
  "name": "EchoMTG Fast Inventory",
  "version": "0.1.0",
  "description": "Rapid card inventory entry for EchoMTG â€” search locally cached sets, add cards with location notes.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://echomtg.com/*",
    "https://www.echomtg.com/*",
    "https://api.echomtg.com/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "EchoMTG Fast Inventory",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://echomtg.com/*",
        "https://www.echomtg.com/*"
      ],
      "js": ["content/content.js"],
      "css": [],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/content.css"],
      "matches": [
        "https://echomtg.com/*",
        "https://www.echomtg.com/*"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E"
      },
      "description": "Toggle Fast Inventory overlay"
    }
  }
}
